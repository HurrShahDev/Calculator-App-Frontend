<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- res/layout/activity_main.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3E3C3C"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <!-- Display Panel -->
        <TextView
            android:id="@+id/displayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#404343"
            android:gravity="end"
            android:padding="16dp"
            android:text="24+22+68+74"
            android:textColor="#FDFBFB"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/displayResultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#404343"
            android:gravity="end"
            android:padding="16dp"
            android:text="188"
            android:textColor="#FDFBFB"
            android:textSize="32sp" />
        <!-- Calculator Buttons Grid -->
        <GridLayout
            android:layout_width="378dp"
            android:layout_height="502dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:background="#404343"
            android:columnCount="4"
            android:rowCount="5">

            <!-- Row 1 -->
            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="C"
                android:textColor="#000"
                android:textSize="32sp"
                android:backgroundTint="#CC0303"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="("
                android:textSize="32sp"
                android:backgroundTint="#5F5C57"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text=")"
                android:textSize="32sp"
                android:backgroundTint="#5F5C57"/>

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="/"
                android:textSize="32sp"
                android:backgroundTint="#FF9800"/>

            <!-- Row 2 -->
            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="7"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="8"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="9"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="*"
                android:textSize="32sp"
                android:backgroundTint="#FF9800"/>

            <!-- Row 3 -->
            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="4"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="5"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="6"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="-"
                android:textSize="32sp"
                android:backgroundTint="#FF9800"/>

            <!-- Row 4 -->
            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="1"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="2"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="3"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="10dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="+"
                android:textSize="32sp"
                android:backgroundTint="#FF9800"/>

            <!-- Row 5 -->
            <Button
                android:id="@+id/buttonAC"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="AC"
                android:textColor="#000"
                android:textSize="27sp"
                android:backgroundTint="#CC0303"/>

            <Button
                android:id="@+id/button90"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="0"
                android:textSize="32sp"
                android:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/button91"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="."
                android:textSize="32sp"
                android:backgroundTint="#FF9800"/>

            <Button
                android:id="@+id/buttonEqualt"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="="
                android:textSize="32sp"
                android:backgroundTint="#FF9800"/>

        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>